<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/result"
        android:id="@+id/results"
        android:textColor="#39FF14"
        android:textSize="100sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/nums"
        android:id="@+id/input_value"
        android:textColor="#39FF14"
        android:textSize="40sp"
        android:layout_below="@+id/results"
        android:paddingTop="20sp" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/divide_button"
        android:background="@drawable/divide"
        android:layout_below="@+id/back_button"
        android:layout_alignStart="@+id/back_button" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/mult_button"
        android:background="@drawable/mult"
        android:layout_below="@+id/divide_button"
        android:layout_alignStart="@+id/divide_button" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button_6"
        android:background="@drawable/num_6"
        android:layout_below="@+id/button_9"
        android:layout_alignStart="@+id/button_3" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button_9"
        android:background="@drawable/num_9"
        android:layout_alignTop="@+id/button_8"
        android:layout_alignStart="@+id/button_6" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button_5"
        android:background="@drawable/num_5"
        android:layout_below="@+id/button_8"
        android:layout_alignStart="@+id/button_2" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button_8"
        android:background="@drawable/num_8"
        android:layout_alignTop="@+id/button_7"
        android:layout_alignStart="@+id/button_5" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button_4"
        android:background="@drawable/num_4"
        android:layout_above="@+id/button_1"
        android:layout_alignStart="@+id/button_1" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button_7"
        android:background="@drawable/num_7"
        android:layout_above="@+id/button_4"
        android:layout_alignStart="@+id/button_4" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/back_button"
        android:background="@drawable/back_button"
        android:layout_marginEnd="15dp"
        android:layout_above="@+id/button_9"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/equals"
        android:background="@drawable/equals"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/point"
        android:layout_width="160dp"
        android:layout_height="40dp" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/point"
        android:background="@drawable/point"
        android:layout_above="@+id/equals"
        android:layout_toStartOf="@+id/button_0" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button_0"
        android:background="@drawable/num_0"
        android:layout_above="@+id/equals"
        android:layout_toStartOf="@+id/clear_button" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/clear_button"
        android:background="@drawable/clear"
        android:layout_alignTop="@+id/button_0"
        android:layout_toStartOf="@+id/minus_button" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/plus_button"
        android:background="@drawable/plus"
        android:layout_alignTop="@+id/clear_button"
        android:layout_toEndOf="@+id/button_3" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/minus_button"
        android:background="@drawable/minus"
        android:layout_above="@+id/clear_button"
        android:layout_alignStart="@+id/mult_button" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button_3"
        android:background="@drawable/num_3"
        android:layout_alignTop="@+id/minus_button"
        android:layout_toEndOf="@+id/button_2" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button_2"
        android:background="@drawable/num_2"
        android:layout_alignTop="@+id/button_3"
        android:layout_toEndOf="@+id/button_1" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button_1"
        android:background="@drawable/num_1"
        android:layout_alignTop="@+id/button_2"
        android:layout_alignStart="@+id/point" />


</RelativeLayout>
